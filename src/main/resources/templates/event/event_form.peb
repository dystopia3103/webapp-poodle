    {% extends "base" %}

    {% block main %}
<script src="/js/eventForm.js"></script>

<h2>Plan your event</h2>

{% if validationErrors is defined %}
    <strong>Please correct the following errors</strong>
    <ul>
    {% for error in validationErrors %}
        <li>{{ error.defaultMessage }}</li>
    {% endfor %}
    </ul>
{% endif %}

<form action="/events/save/{{ event.id }}" method="post">
	<input type="text" name="name" placeholder="Title of your event"
    {% if event.name is defined %} value="{{ event.name }}"{% endif %}>

    <textarea name="description" rows="4" cols="50">
        {% if event.description is defined %}{{ event.description }}{% endif %}
    </textarea>

    <input type="text" name="link" readonly value="{{ event.link }}">

    <div id="time-slots" data-timeslots="{{ timeSlotsJson }}">
    </div>
    <button type="button" onclick="addTimeSlotNode()">Add timeslot</button>
    <button type="button" onclick="removeTimeSlotNode()">Remove</button>
	<input type="submit" value="Save" class="button">
</form>

<script>initForm()</script>
    {% endblock %}